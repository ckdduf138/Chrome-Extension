{
  "name": "First Extension",
  "description": "My first Chrome Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
    "run_at": "document_end",
    "matches": ["*://*/*"],
    "js": ["contentScript.js"]
    }
  ]
}